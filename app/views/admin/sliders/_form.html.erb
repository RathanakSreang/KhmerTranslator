<%= form_for [:admin, @slider] do |f| %>
  <%= render "shared/error_message", object: f.object %>  
  
  <div class="col-md-8 col-md-offset-2">
    <center>
      <%= image_tag f.object.logo, class:"img-round img-responsive user_profile", id: "uploadPreview"  %>
    </center>  
  </div>
  <div class="form-group">
    <%= f.file_field :logo, class: "form-control", id: "uploadImage", onchange:"PreviewImage();", accept: "image/png,image/gif,image/jpeg" %>
    <%= f.hidden_field :logo_cache %>
  </div>
  
  <div class="form-group">
    <%= f.text_field :title, class: "form-control", placeholder: Slider.human_attribute_name(:title) %>
  </div>
  
  <div class="form-group">
    <%= f.text_area :description, rows: 5, class: "form-control", placeholder: Slider.human_attribute_name(:description) %>
  </div>
  
  <div class="form-group">
    <%= f.label :show, class: "radio-inline", value: true do %>
      <%= f.radio_button :show, true %> <%= t("pages.label.show") %>
    <% end%>
    <%= f.label :show, class: "radio-inline", value: false do %>
      <%= f.radio_button :show, false %> <%= t("pages.label.hide") %>
    <% end%>
  </div>
  <div class="form-group">    
    <%= f.submit action, class: "btn btn-primary" %>
    <%= link_to t("link.back"), admin_sliders_path %>
  </div>
<% end %>
