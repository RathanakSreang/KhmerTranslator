<%= form_for [:admin, @side_menu] do |f| %>
  <%= render "shared/error_message", object: f.object %>  
  
  <div class="col-md-8 col-md-offset-2">
    <center>
      <%= image_tag f.object.image, class:"img-round img-responsive", id: "uploadPreview"  %>
    </center>  
  </div>
  <div class="form-group">
    <%= f.file_field :image, class: "form-control", id: "uploadImage", onchange:"PreviewImage();", accept: "image/png,image/gif,image/jpeg" %>
    <%= f.hidden_field :image_cache %>
  </div>
  
  <div class="form-group">
    <%= f.text_field :title, class: "form-control", placeholder: SideMenu.human_attribute_name(:title) %>  
  </div>

  <div class="form-group">
    <%= f.text_field :link, class: "form-control", placeholder: SideMenu.human_attribute_name(:link) %>  
  </div>

  <div class="form-group">
    <%= f.label :show, class: "radio-inline", value: true do %>
      <%= f.radio_button :show, true %> <%= t("slider.label.show") %>
    <% end%>
    <%= f.label :show, class: "radio-inline", value: false do %>
      <%= f.radio_button :show, false %> <%= t("slider.label.hide") %>
    <% end%>
  </div>
  <div class="form-group">
    <%= f.submit action, class: "btn btn-primary" %>
  </div>
<% end %>
