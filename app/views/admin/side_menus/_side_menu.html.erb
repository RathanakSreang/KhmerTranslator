<tr>
  <td>
    <%= side_menu.id %>
  </td>
  <td>
    <%= truncate side_menu.title, length: 30 %>
  </td>
  <td>
    <%= truncate side_menu.link, length: 30 %>
  </td>
  <td>
    <%= (truncate side_menu.image.url, length: 30) if side_menu.image %>
  </td>
  <td><input type="checkbox" <%= side_menu.show ? "checked" : "" %> disabled></td>
  <td>
    <%= link_to t("link.detail"), admin_side_menu_path(side_menu) %>  
    | <%= link_to t("link.edit"), edit_admin_side_menu_path(side_menu) %>
    | <%= link_to t("link.delete"), admin_side_menu_path(side_menu), data: {method: :delete, confirm: t("info.confirm_delete")} %>
  </td>
</tr>
