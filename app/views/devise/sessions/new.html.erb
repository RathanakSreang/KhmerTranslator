<div class="col-md-6 col-md-offset-3 well">
  <legend><%= t("devise.login") %></legend>  

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">      
      <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: User.human_attribute_name(:email) %>
    </div>

    <div class="form-group">      
      <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: User.human_attribute_name(:password) %>
    </div>

    <div class="actions">
      <%= f.submit t("link.login"), class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
